<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:layout_marginTop="80dp"
        android:id="@+id/intro_item_title"
        android:layout_width="match_parent"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/intro_item_description"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/primary"
        android:textSize="30dp"
        android:gravity="center"
        tools:text="Discounted Secondhand Books"/>

    <TextView
        android:id="@+id/intro_item_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/intro_item_title"
        android:textColor="@color/primary"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toTopOf="@id/intro_item_image"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        tools:text="Used and near new secondhand books at great prices."/>

    <ImageView
        android:id="@+id/intro_item_image"
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:src="@drawable/ic_intro_page_01"
        app:layout_constraintTop_toBottomOf="@id/intro_item_description"/>

</androidx.constraintlayout.widget.ConstraintLayout>